<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Buttons theme -->
    <style name="buttonTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Progress bar theme -->
    <style name="progressBarTheme" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:max">10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- root view theme of review questions in finish layout -->
    <style name="result_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- line separator theme for finish layout -->
    <style name="separator_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin</item>
    </style>

    <!-- indicators icons theme on finish layout -->
    <style name="result_icon">
        <item name="android:layout_width">@dimen/result_icons_size</item>
        <item name="android:layout_height">@dimen/result_icons_size</item>
        <item name="android:layout_marginRight">@dimen/result_icons_margin</item>
    </style>

    <!-- question's titles theme on question's layouts -->
    <style name="question_theme" parent="result_question">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!-- question's options theme on question's layouts -->
    <style name="option_theme" parent="base_question">
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin</item>
    </style>

    <!-- question's titles theme on finish layout -->
    <style name="result_question" parent="base_question">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin</item>
    </style>

    <!-- user answers theme on finish layout -->
    <style name="result_answer" parent="base_question">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- base theme for question's titles, options and answers -->
    <style name="base_question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>


</resources>
